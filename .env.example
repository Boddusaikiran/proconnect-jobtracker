# Backend Port
PORT=5000

# Database (optional - if not set, uses in-memory storage)
# Format: postgresql://user:password@localhost:5432/database_name
DATABASE_URL=postgresql://user:password@localhost:5432/codread

# JWT Secret for authentication (change this to a strong secret in production)
JWT_SECRET=your-secret-key-here

# OpenAI API Key (optional - if not set, uses template messages)
OPENAI_API_KEY=sk-your-api-key-here

# Node Environment
NODE_ENV=development
